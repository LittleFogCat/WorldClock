<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <View
        android:layout_width="10px"
        android:layout_height="10px"
        android:background="@drawable/just_a_circle" />

    <com.clearcrane.worldclock.views.SpreadCircleView
        android:layout_width="10px"
        android:layout_height="10px"
        android:background="@drawable/just_a_ring" />

    <TextView
        android:id="@+id/tvCityName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12px"
        android:layout_marginTop="8px"
        android:shadowColor="@color/black"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4"
        android:textColor="@color/white"
        android:textSize="24px" />
</com.zhy.autolayout.AutoFrameLayout>